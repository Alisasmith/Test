<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.zhaoemifeng.test.fragments.MovieFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_critic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_critic"/>
        <ImageView
            android:id="@+id/date_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/date_1"
            android:layout_marginLeft="280dp"
            />
        <ImageView
            android:id="@+id/date_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/date_9"
            android:layout_toRightOf="@id/date_1"
            />
        <ImageView
            android:id="@+id/week_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/week_3"
            android:layout_toRightOf="@id/date_9"/>
        <ImageView
            android:id="@+id/month_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/month_divide"
            android:layout_toRightOf="@id/date_9"
            android:layout_below="@id/week_3"/>
        <ImageView
            android:id="@+id/month_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/month_12"
            android:layout_below="@id/week_3"
            android:layout_toRightOf="@id/month_divide"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="320dp"
            android:src="@mipmap/more_selected"/>

    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/movie_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</FrameLayout>
